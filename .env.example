# SIMA Platform - Environment Variables Template

# ===================================
# Database Configuration
# ===================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=sima
DB_PASSWORD=your_secure_password_here
DB_NAME=sima_core

# ===================================
# JWT Configuration
# ===================================
JWT_SECRET=your_jwt_secret_key_min_32_chars_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_min_32_chars_here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===================================
# Services Ports
# ===================================
API_GATEWAY_PORT=3000
INVENTORY_SERVICE_PORT=3001
AUTH_SERVICE_PORT=3002
TENANT_SERVICE_PORT=3003
AUDIT_SERVICE_PORT=3004
STORAGE_SERVICE_PORT=3005
NOTIFICATION_SERVICE_PORT=3006
REPORT_SERVICE_PORT=3007
SEARCH_SERVICE_PORT=3008

# ===================================
# Kafka Configuration
# ===================================
KAFKA_BROKER=localhost:9092
KAFKA_CLIENT_ID=sima-platform
KAFKA_CONSUMER_GROUP=sima-consumers

# ===================================
# MongoDB Configuration (Audit Service)
# ===================================
MONGO_URI=mongodb://root:your_mongo_password@localhost:27017/audit_logs?authSource=admin
MONGO_USER=root
MONGO_PASSWORD=your_mongo_password_here

# ===================================
# Redis Configuration
# ===================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===================================
# RabbitMQ Configuration
# ===================================
RABBITMQ_URL=amqp://sima:your_rabbitmq_password@localhost:5672
RABBITMQ_USER=sima
RABBITMQ_PASSWORD=your_rabbitmq_password_here

# ===================================
# MinIO Configuration (Storage Service)
# ===================================
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=sima
MINIO_SECRET_KEY=your_minio_secret_key_min_8_chars_here
MINIO_USE_SSL=false

# ===================================
# Application Configuration
# ===================================
NODE_ENV=development
LOG_LEVEL=info
FRONTEND_URL=http://localhost:3000

# ===================================
# Email Configuration (Notification Service)
# ===================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password

# ===================================
# Docker PostgreSQL (for docker-compose)
# ===================================
POSTGRES_USER=sima
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_DB=sima_core

# ===================================
# MQTT Configuration (IoT/Notification Service)
# ===================================
MQTT_ENABLED=true
MQTT_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=

# ===================================
# gRPC Configuration
# ===================================
GRPC_PORT=50051
GRPC_REFLECTION_ENABLED=true

# ===================================
# Geo-Tracker Service
# ===================================
GEO_TRACKER_PORT=3009
SIMULATE_DEVICES=false

# ===================================
# Analytics Engine (Python)
# ===================================
ANALYTICS_PORT=3010

# ===================================
# Grafana & Monitoring
# ===================================
GRAFANA_PASSWORD=admin123
N8N_PASSWORD=admin123

# ===================================
# Instrucciones
# ===================================
# 1. Copia este archivo como .env en la raíz del proyecto:
#    cp .env.example .env
#
# 2. Reemplaza TODOS los valores 'your_*_here' con valores reales
#
# 3. Para generar secrets seguros, usa:
#    node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
#
# 4. NUNCA commities el archivo .env a git (ya está en .gitignore)
#
# 5. Para producción, usa un secrets manager (AWS Secrets Manager, Vault, etc.)
