{
  "name": "sima-portal",
  "version": "1.0.0",
  "description": "SIMA Platform Portal",
  "author": "Dereck2102",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "cap:sync": "npx cap sync",
    "cap:android": "npx cap run android",
    "electron:dev": "npm run build && node ./electron/main.js",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "next": "^14.0.4",
    "zustand": "^4.4.1",
    "lucide-react": "^0.294.0",
    "recharts": "^2.10.0",
    "axios": "^1.6.2",
    "socket.io-client": "^4.7.2",
    "@capacitor/core": "^6.1.1"
  },
  "devDependencies": {
    "typescript": "^5.9.2",
    "@types/react": "^18.2.0",
    "@types/node": "^20.10.6",
    "tailwindcss": "^3.3.0",
    "postcss": "^8.4.31",
    "autoprefixer": "^10.4.16",
    "@capacitor/cli": "^6.0.0",
    "@capacitor/android": "^6.0.0",
    "electron": "^28.2.8",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.0.4",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.sima.portal",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
