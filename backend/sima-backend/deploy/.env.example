# Image settings
IMAGE_REGISTRY=ghcr.io/<owner>/<repo>
IMAGE_TAG=latest

# Database (RDS)
DATABASE_HOST=<rds-endpoint>
DATABASE_PORT=5432
DATABASE_NAME=simadb
DATABASE_USER=sima_admin
DATABASE_PASSWORD=<set-me>

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Mongo
MONGODB_URI=mongodb://mongo:27017/sima
MONGODB_USER=admin
MONGODB_PASSWORD=<set-me>

# Kafka
KAFKA_BROKERS=kafka:9092
KAFKA_GROUP_ID=sima-group

# RabbitMQ / MQTT
RABBITMQ_URI=amqp://guest:guest@rabbit:5672
MQTT_BROKER=mqtt://mqtt:1883

# JWT
JWT_SECRET=<set-me>
REFRESH_TOKEN_SECRET=<set-me>
JWT_EXPIRATION=86400
REFRESH_TOKEN_EXPIRATION=604800

# CORS
CORS_ORIGIN=https://app.example.com

# AWS (for storage-service)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=<set-me>
AWS_SECRET_ACCESS_KEY=<set-me>
AWS_S3_BUCKET=sima-storage
AWS_S3_ENDPOINT=https://s3.amazonaws.com

# Mail
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=<set-me>
MAIL_PASSWORD=<set-me>
MAIL_FROM=noreply@sima.edu.ec

# Feature flags
FEATURE_MULTI_REGION=false
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_ML_RECOMMENDATIONS=false
FEATURE_BLOCKCHAIN_AUDIT=false
