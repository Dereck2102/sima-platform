    "@nx/jest": "22.4.1",
    "@nx/js": "22.4.1",
    "@nx/nest": "^22.4.1",
    "@nx/next": "22.4.1",
    "@nx/node": "22.4.1",
    "@nx/react": "22.4.1",
    "@nx/web": "22.4.1",
    "@nx/webpack": "22.4.1",
    "@nx/workspace": "22.4.1",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/bcrypt": "^6.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "20.19.9",
