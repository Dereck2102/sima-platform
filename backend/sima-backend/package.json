{
  "name": "sima-platform-monorepo",
  "version": "1.0.0",
  "description": "SIMA Platform - Complete Microservices and Frontend Monorepo",
  "license": "MIT",
  "author": "Dereck Amacoria <DSAMACORIA@UCE.EDU.EC>",
  "private": true,
  "scripts": {
    "nx": "nx",
    "start": "nx serve api-gateway",
    "start:qa": "npm run build:qa && npm run serve:qa",
    "start:prod": "npm run build:prod && npm run serve:prod",
    "build": "nx run-many --target=build --all --exclude=sima-platform-monorepo --parallel",
    "build:qa": "nx run-many --target=build --all --exclude=sima-platform-monorepo --configuration=development --parallel",
    "build:prod": "nx run-many --target=build --all --exclude=sima-platform-monorepo --configuration=production --parallel",
    "build:services": "nx run-many --target=build --projects=api-gateway,auth-service,users-service,assets-service,audit-service,iot-service,notifications-service,reports-service,storage-service --parallel",
    "serve:qa": "nx run-many --target=serve --all --configuration=development --parallel",
    "serve:prod": "nx run-many --target=serve --all --configuration=production --parallel",
    "test": "nx run-many --target=test --all --coverage",
    "test:watch": "nx run-many --target=test --all --watch",
    "test:ci": "nx run-many --target=test --all --coverage --ci",
    "test:e2e": "nx run-many --target=e2e --all",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint --all -- --fix",
    "format": "prettier --write \\\"**/*.{ts,tsx,js,jsx,json,md}\\\"",
    "format:check": "prettier --check \\\"**/*.{ts,tsx,js,jsx,json,md}\\\"",
    "graph": "nx graph",
    "affected:build": "nx affected:build",
    "affected:test": "nx affected:test",
    "affected:lint": "nx affected:lint",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "ts-node ./migrate.ts",
    "db:seed": "node ../../scripts/seed_admin.js",
    "health:check": "bash scripts/health-check.sh",
    "infra:plan": "terraform -chdir=infrastructure plan",
    "infra:apply": "terraform -chdir=infrastructure apply",
    "infra:destroy": "terraform -chdir=infrastructure destroy",
    "n8n:setup": "bash infrastructure/scripts/n8n-setup.sh",
    "prometheus:setup": "bash infrastructure/scripts/prometheus-setup.sh",
    "grafana:setup": "bash infrastructure/scripts/grafana-setup.sh"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.0.0",
    "@nestjs/microservices": "^10.0.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.0",
