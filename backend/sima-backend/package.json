    "axios": "^1.6.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "graphql": "^16.8.1",
    "ioredis": "^5.3.2",
    "kafka-node": "^5.0.0",
    "kafkajs": "^2.2.4",
    "mongoose": "^8.0.3",
    "mqtt": "^5.3.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.17.2",
    "pino": "^8.17.2",
    "pino-http": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "typeorm": "^0.3.17"
  },
