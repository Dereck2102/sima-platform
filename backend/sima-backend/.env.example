# Environment Configuration Template
# Copy to .env.qa or .env.prod and fill with actual values

# === General ===
NODE_ENV=development
APP_NAME=SIMA Platform
APP_VERSION=1.0.0
LOG_LEVEL=debug

# === Server ===
API_GATEWAY_PORT=3000
API_GATEWAY_HOST=0.0.0.0
SERVICE_DISCOVERY_URL=http://localhost:8500
AUTH_SERVICE_URL=http://localhost:3001
USERS_SERVICE_URL=http://localhost:3002
ASSETS_SERVICE_URL=http://localhost:3003
AUDIT_SERVICE_URL=http://localhost:3004
IOT_SERVICE_URL=http://localhost:3005
NOTIFICATIONS_SERVICE_URL=http://localhost:3006
REPORTS_SERVICE_URL=http://localhost:3007
STORAGE_SERVICE_URL=http://localhost:3008

# === Databases ===
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=sima_db
DATABASE_USER=sima_user
DATABASE_PASSWORD=change_me_in_production

MONGODB_URI=mongodb://localhost:27017/sima
MONGODB_USER=admin
MONGODB_PASSWORD=change_me_in_production

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# === Message Brokers ===
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=sima-group
KAFKA_TOPICS=events,notifications,audit-logs

RABBITMQ_URI=amqp://guest:guest@localhost:5672
RABBITMQ_QUEUE=sima-queue

MQTT_BROKER=mqtt://localhost:1883
MQTT_TOPICS=sima/+/+

# === JWT Configuration ===
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRATION=86400
REFRESH_TOKEN_SECRET=your_refresh_token_secret
REFRESH_TOKEN_EXPIRATION=604800

# === OAuth2 (Optional) ===
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
OAUTH_GITHUB_CLIENT_ID=
OAUTH_GITHUB_CLIENT_SECRET=

# === File Storage ===
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=sima-storage
AWS_S3_ENDPOINT=https://s3.amazonaws.com

# === Email Service ===
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=
MAIL_PASSWORD=
MAIL_FROM=noreply@sima.edu.ec

# === Monitoring ===
PROMETHEUS_METRICS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_URL=http://localhost:3001
GRAFANA_API_KEY=

# === n8n Automation ===
N8N_URL=http://localhost:5678
N8N_API_KEY=

# === Security ===
CORS_ORIGIN=http://localhost:3001,http://localhost:3002
RATE_LIMIT_WINDOW=900
RATE_LIMIT_MAX_REQUESTS=100
API_KEY_SECRET=change_me_in_production

# === Backup Configuration ===
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# === Logging ===
LOG_FORMAT=json
LOG_OUTPUT=file
LOG_FILE_PATH=/var/log/sima.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=10

# === Feature Flags ===
FEATURE_MULTI_REGION=false
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_ML_RECOMMENDATIONS=false
FEATURE_BLOCKCHAIN_AUDIT=false
